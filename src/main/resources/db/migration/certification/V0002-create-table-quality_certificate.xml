<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Daniil Hromau" id="2024-07-18-2">

        <!--Сертификаты-->
        <createTable tableName="quality_certificate" remarks="Сертификаты качества">
            <column name="certId" type="UUID" remarks="ID записи">
                <constraints primaryKey="true"/>
            </column>
            <column name="certNum" type="INTEGER" remarks="Номер сертификата">
                <constraints nullable="false"/>
            </column>
            <column name="certYear" type="INTEGER" remarks="Год сертификата">
                <constraints nullable="false"/>
            </column>
            <column name="certDate" type="DATE" remarks="Дата создания сертификата">
                <constraints nullable="false"/>
            </column>
            <column name="certsSgningDate" type="DATE" remarks="Дата подписания сертификата">
                <constraints nullable="true"/>
            </column>
            <column name="workshopCode" type="UUID" remarks="Код цеха">
                <constraints nullable="false"/>
            </column>
            <column name="certType" type="UUID" remarks="Идентификатор типа сертификата">
                <constraints nullable="false"/>
            </column>
            <column name="orderNum" type="BIGINT" remarks="Номер заказа, связанного с сертификатом">
                <constraints nullable="false"/>
            </column>
            <column name="orderPos" type="INTEGER" remarks="Номер позиции заказа">
                <constraints nullable="false"/>
            </column>
            <column name="orderYear" type="INTEGER" remarks="Год исполнения заказа">
                <constraints nullable="false"/>
            </column>
            <column name="orderType" type="UUID" remarks="Идентификатор типа заказа">
                <constraints nullable="false"/>
            </column>
            <column name="certQR" type="VARCHAR(15)" remarks="Ключ QR code">
                <constraints nullable="false"/>
            </column>
            <column name="certQRLink" type="VARCHAR(500)" remarks="Ссылка на QR code">
                <constraints nullable="false"/>
            </column>
            <column name="certForm" type="UUID" remarks="Идентификатор бланка сертификата">
                <constraints nullable="false"/>
            </column>
            <column name="statusID" type="UUID" remarks="Идентификатор статуса в справочнике">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
