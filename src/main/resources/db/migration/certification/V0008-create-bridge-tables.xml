<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Daniil Hromau" id="2024-07-19-6">

        <!--Таблица связей наборов характеристик и сертификатов-->
        <createTable tableName="group_attributes_unit_certificates" remarks="Таблица связей наборов характеристик и единицы продукции">
            <column name="id" type="uuid" remarks="ID записи">
                <constraints primaryKey="true"/>
            </column>
            <column name="attributesSetId" type="uuid" remarks="Идентификатор набора атрибутов.">
                <constraints foreignKeyName="fk_group_attributes_unit_certificates_group_attributes" referencedTableName="group_attributes" referencedColumnNames="attributesSetId" nullable="false"/>
            </column>
            <column name="certId" type="uuid" remarks="Идентификатор сертификата.">
                <constraints foreignKeyName="fk_group_attributes_unit_certificates_certificate" referencedTableName="quality_certificate" referencedColumnNames="certId" nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
